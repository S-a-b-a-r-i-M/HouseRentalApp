<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_blue"
    tools:context=".presentation.ui.property.PropertiesListFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <include
                    android:id="@+id/backImgBtn"
                    layout="@layout/back_button" />

                <HorizontalScrollView
                    style="@style/TextAppearance.Toolbar"
                    android:background="@color/gray_very_light"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <TextView
                        android:id="@+id/tvFilteredCityAndLocalityInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:text="Chennai | Madurai | Thirunelvali"
                        android:textColor="@color/gray_dark" />

                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:minWidth="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/primary_blue"
                    android:layout_marginHorizontal="4dp"
                    android:padding="0dp"
                    app:cornerRadius="4dp"
                    android:text="@string/filters" />

                <ImageButton
                    android:id="@+id/ibtnSort"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_margin="4dp"
                    app:tint="@color/primary_blue"
                    android:background="@drawable/image_btn_background"
                    android:src="@drawable/outline_swap_vert_24"
                    android:contentDescription="@string/sort"/>

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShortlists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:tint="@color/primary_blue"
        android:backgroundTint="@color/primary_blue_very_light"
        android:src="@drawable/baseline_favorite_filled"
        android:contentDescription="@string/open_shortlists"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProperty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBarLayout" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>