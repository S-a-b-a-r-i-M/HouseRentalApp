<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_blue"
    tools:context=".presentation.ui.property.PropertiesListFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingHorizontal="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <include
                    android:id="@+id/backImgBtn"
                    layout="@layout/back_button" />

                <HorizontalScrollView
                    style="@style/TextAppearance.App.Toolbar"
                    android:background="@color/gray_very_light"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_margin="4dp">

                    <TextView
                        android:id="@+id/tvFilteredCityAndLocalityInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/gray_dark" />

                </HorizontalScrollView>

                <com.google.android.material.search.SearchBar
                    android:id="@+id/searchBar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:hint="@string/search_city_locality"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolBarLayout"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="2dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilters"
                    android:minWidth="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="?attr/colorPrimary"
                    android:layout_marginHorizontal="4dp"
                    android:padding="0dp"
                    app:cornerRadius="4dp"
                    android:text="@string/filters" />

                    <TextView
                        android:id="@+id/btn_filters_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="top|end"
                        android:background="@drawable/badge_bg"
                        android:gravity="center"
                        android:paddingHorizontal="7dp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </FrameLayout>

                <ImageButton
                    android:id="@+id/ibtnSort"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorPrimary"
                    android:background="@drawable/image_btn_background"
                    android:src="@drawable/outline_swap_vert_24"
                    android:contentDescription="@string/sort"/>

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProperty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBarLayout" />

    <include
        android:id="@+id/noDataPlaceHolderView"
        layout="@layout/no_data_found"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

