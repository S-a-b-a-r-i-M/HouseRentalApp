<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="50dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvLeadName"
            style="@style/TextAppearance.App.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lead Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibtnOpenLead"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/open_lead"
            android:scaleType="fitCenter"
            android:src="@drawable/outline_arrow_forward_ios_24"
            app:layout_constraintBottom_toBottomOf="@+id/tvLeadName"
            app:layout_constraintStart_toEndOf="@+id/tvLeadName"
            app:layout_constraintTop_toTopOf="@+id/tvLeadName"
            app:tint="@color/gray_medium" />

        <ImageButton
            android:id="@+id/ibtnDial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:background="@color/gray_very_light"
            android:contentDescription="@string/phone"
            android:src="@drawable/baseline_call_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorPrimaryDark" />

        <ImageButton
            android:id="@+id/ibtnEmail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@color/gray_very_light"
            android:contentDescription="@string/email"
            android:src="@drawable/baseline_email_24"
            app:layout_constraintEnd_toStartOf="@+id/ibtnDial"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorPrimaryDark" />

        <TextView
            android:id="@+id/tvLeadStatus"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="Status"
            android:background="@color/gray_very_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLeadName" />

        <TextView
            android:id="@+id/tvInterestedProperties"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="2dp"
            android:text="1. BHK ⦿ City, Locality ⦿ ₹Rent/month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLeadStatus" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>