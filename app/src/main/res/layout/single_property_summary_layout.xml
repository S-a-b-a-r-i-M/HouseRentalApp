<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="50dp"
    app:cardCornerRadius="10dp" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <HorizontalScrollView
            android:id="@+id/scrlImageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/imageContainer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginTop="2dp"
            style="@style/Separator" />

        <TextView
            android:id="@+id/tvHeader"
            style="@style/TextAppearance.App.Body1"
            android:layout_marginTop="2dp"
            android:text="@string/property_name"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBody1"
            style="@style/TextAppearance.App.Body3"
            android:text="@string/street_name_locality_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBody2"
            style="@style/TextAppearance.App.Body1"
            android:layout_marginTop="2dp"
            android:text="@string/price_maintenance_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/container"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFooter"
                style="@style/TextAppearance.App.Body3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_dark"
                android:text="@string/bhk_property_type_un_furnished_1000_sq_ft" />

            <ImageButton
                android:id="@+id/ibtnShortlist"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_favorite_filled"
                app:tint="@color/gray_medium"
                android:layout_gravity="top|end"
                android:contentDescription="@string/shortlist" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>