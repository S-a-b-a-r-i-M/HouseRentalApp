<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvSearchSummary"
        style="@style/TextAppearance.App.Body3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Rent, Chennai, Any y  BHK, Any Budget, Any Property Type, Any Furnishing Type, Any Tenant" />

    <ImageButton
        android:id="@+id/ibtnForward"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="2dp"
        android:layout_gravity="center|end"
        android:src="@drawable/outline_arrow_forward_ios_24"
        app:tint="?attr/colorPrimaryDark"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/search_this" />

</androidx.cardview.widget.CardView>