<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="android:background">@color/white_blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/poppins</item>

        <!-- Button Theme Integration -->
<!--        <item name="materialButtonStyle">@style/AppTheme.Button</item>-->
<!--        <item name="borderlessButtonStyle">@style/AppTheme.Button.TextButton</item>-->
<!--        <item name="materialButtonOutlinedStyle">@style/AppTheme.Button.OutlinedButton</item>-->
    </style>

    <style name="Custom.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_blue_very_light</item>
    </style>

    <style name="Headline1" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/primary_blue_dark</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline2" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/primary_blue_dark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/primary_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/primary_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>