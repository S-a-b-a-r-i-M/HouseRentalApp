<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item> <!-- main brand color -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorPrimaryContainer">@color/primary_blue_light</item> <!-- Lighter variant for containers -->
        <item name="colorOnPrimaryContainer">@color/primary_blue_dark</item>
        <item name="colorSurfaceVariant">@color/primary_blue_very_light</item> <!-- Alternate surface for differentiation -->
        <item name="android:colorBackground">@color/white_blue</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- Text -->
        <item name="fontFamily">@font/poppins</item>

        <item name="android:scrollbarThumbHorizontal">@null</item>
        <item name="android:scrollbarThumbVertical">@null</item>

        <item name="popupMenuBackground">@drawable/popup_bg</item>
    </style>

    <style name="Widget.App.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="Widget.App.Chip.Input" parent="Widget.Material3.Chip.Input">
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@color/chip_input_color</item>
        <item name="chipStrokeColor">@color/chip_input_stroke_color</item>
    </style>

    <style name="Widget.App.Chip.Input.Elevated" parent="Widget.Material3.Chip.Input.Elevated">
        <item name="closeIconVisible">false</item>
        <item name="android:saveEnabled">false</item>
        <item name="chipBackgroundColor">@color/chip_input_color</item>
    </style>

    <style name="Widget.App.ChipGroup" parent="Widget.Material3.ChipGroup">
        <item name="chipSpacingHorizontal">12dp</item>
        <item name="singleLine">true</item>
        <item name="singleSelection">false</item>
        <item name="selectionRequired">false</item>
    </style>

    <style name="Separator" >
        <item name="android:background">@color/separator_color</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="RoundedImgCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="TopRoundedCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeTopRight">48dp</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="Widget.App.TextInputLayout.OutlinedBox" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_medium</item>
        <item name="counterEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="RoundedInputField">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox.Designed" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?android:colorBackground</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/gray_medium</item>
        <item name="errorEnabled">true</item>
        <item name="shapeAppearanceOverlay">@style/RoundedInputField</item>
    </style>

    <style name="Widget.App.TextInputLayout.FilledBox" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_medium</item>
        <item name="counterEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style
        name="Widget.App.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_medium</item>
        <item name="errorEnabled">true</item>
    </style>
</resources>