<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Text Button Style (Tertiary Actions) -->
    <style name="Widget.App.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@color/primary_blue_very_light</item>
        <item name="drawableTint">?attr/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="rippleColor">@color/primary_blue_light</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.App.OutlinedButton.Tabs" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
    </style>

</resources>